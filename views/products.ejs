<!DOCTYPE html>
<html>
<head>
    <title>Product List</title>
</head>
<body>
<%- include('library.ejs')%>
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-5">
            Product List
        </h1>
        <a href="/logout">Log Out</a>
    </div>
    <div>
        <a href="/add-product" class="btn btn-info">Add Product</a>
    </div>

    <div class="mt-2">
        <form method="get" action="/" class="d-flex align-items-center gap-2">
            <input value="<%=title%>" class="w-25 form-control" name="title" placeholder="Enter product title"/>
            <input
                    value="<%=minPrice%>"
                    type="number"
                    style="width: 100px;"
                    class="form-control" name="minPrice" placeholder="Min"/>
            -
            <input
                    value="<%=maxPrice%>"
                    type="number"
                    style="width: 100px;"
                    class="form-control" name="maxPrice" placeholder="Max"/>

            <button class="btn btn-primary">Search</button>
            <a href="/" type="reset" class="btn btn-light">Clear</a>
        </form>
    </div>
    <% if (products.length === 0) { %>
        <div class="alert alert-warning mt-2">
            No Records.
        </div>
    <%}%>
    <% if (products.length > 0) { %>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>In Stock</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.title %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.stock %> items</td>
                    <td><img src="<%= product.image %>" alt="<%= product.title %>" class="img-thumbnail" style="max-width: 100px;"></td>
                    <td>
                        <a href="/products/edit/<%= product._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/products/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <%}%>
</div>
</body>
</html>
